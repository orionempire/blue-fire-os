#ifndef INTERRUPT_HANDLER_H_
#define INTERRUPT_HANDLER_H_

// Context after an interrupt.
typedef struct irq_context {
	// General purpose register.
	u32int	edi, esi, ebp, ebx, edx, ecx, eax;
	// Segment registers.
	u32int	es, ds;
	// The interrupt number, pushed by CPU.
	u32int	IRQ;
	//Instruction pointer, Code segment register, and EFLAGS register pushed by CPU
	u32int	eip, cs, eflags;
} irq_context_t;

// Total number of IRQ.
#define NUMBER_ALLOCATED_IRQ		16


// Public Function declarations

#endif /* INTERRUPT_HANDLER_H_ */
