[BITS 32]

%ifndef EXCEPTION_S
%define EXCEPTION_S

%define KERNEL_DATA_SEL 0x08

%macro BUILD_EXC 1
	push dword %1
	jmp COMMON_EXC
%endmacro

%macro BUILD_NOCODE_EXC 1
	push dword 0
	push dword %1
	jmp COMMON_EXC
%endmacro

%endif

