;	Name: start.asm
;	Last update: 2012-01-10
;	Purpose:
;	Usage: Must be in protect mode.
;***********************************************************

; Tell assembler to generate 32 bit byte code. Any code in this
; Module must be called after in Protect mode.
[BITS 32]

GLOBAL _start

_start:
	jmp entry


;***********************************************************
; Turn off floppy motor
;***********************************************************
entry:
	; Turn off floppy motor
	mov	dx, 0x03F2
	mov	al, 0x0C
	out	dx, al

pause:
	jmp pause
