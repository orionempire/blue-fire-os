#include <common_include.h>

//The current path
s08int path[256];
//mounted file system sentinel
s32int mount_sentinel = 0;

// --- Pointers to file system descriptors loaded off the disk ---
// pointer to the superblock
struct super_block 		*superblock = 0;
// pointer to the group descriptor table
struct group_descriptor *group_descriptor_table = 0;
//block read off disk that holds the inode we want
struct i_node 			*current_inode_block = 0;

struct i_node 			new_inode;


// --- Values calculated from the SuperBlock
u32int formated_block_size;
u32int fragment_size;
u32int number_of_groups;
u32int inodes_per_indirect;
u16int inodes_per_block;
u16int sectors_per_block;


// --- Variables representing a open file object ---
// A list of pointers in LBA to all the blocks needed by our current file object.
u32int *pointer_directory;
// Number of pointers loaded in to pointer_directory
u32int number_blocks_loaded = 0;

// --- Variables representing a open directory object ---
// Parsed directory
struct directory_entry parsed_directory[MAX_LOADED_DIRS];
// Amount of entries in parsed directory
u32int parsed_directory_size;

// ---Load the sections of the disk---
void load_super_block() {
	u32int sentinal = FALSE;

	if (superblock) {
		kfree(superblock);
	}

	superblock = kmalloc(DIMENSION_SUPER_BLOCK);
	memset08(superblock, 0, DIMENSION_SUPER_BLOCK);

	sentinal = fdc_read((START_SUPER_BLOCK/FDC_SECTOR_SIZE),(u08int *)superblock,(DIMENSION_SUPER_BLOCK / FDC_SECTOR_SIZE));

	if( sentinal == FALSE){
		kset_color(LIGHT_RED);
		kprintf("\nFatal Error mounting file system\n");
		halt();
	}

	//Sanity check by looking at magic number
	if (superblock->s_magic != EXT2_MAGIC_NUMBER) {
		kset_color(LIGHT_RED);
		kprintf("\nFatal Error verifying file system\n");
		halt();
	}
}

// Return the current path
s08int *pwd() {
	return(path);
}

//mount the floppy's ext2 file system
void mount_floppy() {

	if (mount_sentinel) {
		kprintf("\nERROR - File system already mounted!\n");
		return;
	}

	kprintf("\nInitializing FileSystem...\n");
	// Initialize the path
	path[0]='\0';

	load_super_block();

	debug_dump_superblock();
}

void debug_dump_descriptortable() {
	int i;
	struct group_descriptor  *group_descriptor;

	for(i = 0; i < number_of_groups; i++){
		group_descriptor  = &group_descriptor_table[i];
		printf("\n\r----Printing Entry %i of %i---\n\r", i + 1 ,number_of_groups);
		printf("\n\rId of first block of Block bitmap :\t\t\t%i",group_descriptor->bg_block_bitmap);		//8
		printf("\n\rId of first block of Inode bitmap :\t\t\t%i",group_descriptor->bg_inode_bitmap);		//9
		printf("\n\rId of first block of Inode Table :\t\t\t%i",group_descriptor->bg_inode_table);			//10
		printf("\n\rNumber of free blocks in this group :\t\t\t%i",group_descriptor->bg_free_blocks_count);	//1219
		printf("\n\rNumber of free inodes in this group :\t\t\t%i",group_descriptor->bg_free_inodes_count);	//165
		printf("\n\rNumber inodes allocated to directories:\t\t\t%i",group_descriptor->bg_used_dirs_count);	//5
	}
	printf("\n\r");
}
void debug_dump_superblock() {

	printf("\n\r----Loaded Entries---\n\r");
	printf("\n\rTotal number of inodes:\t\t\t%i", superblock->s_inodes_count);								//184
	printf("\n\rTotal number of block:\t\t\t%i", superblock->s_blocks_count);								//1440
	printf("\n\rBlocks reserved for the super user:\t%i", superblock->s_r_blocks_count );					//72
	printf("\n\rTotal number of free blocks:\t%i", superblock->s_free_blocks_count );						//1219
	printf("\n\rTotal number of free inodes:\t%i ",superblock->s_free_inodes_count );						//165
	printf("\n\rId of block containing the superblock structure :\t%i ",superblock->s_first_data_block );	//1
	printf("\n\rBlock Size:\t\t\t\t%i", formated_block_size);												//1024 (1024 Shifted left 0 spaces)
	printf("\n\rFragment Size:\t\t\t\t%i", fragment_size);													//1024 (1024 Shifted left 0 spaces)
	printf("\n\rNumber of blocks per group:\t%i ",superblock->s_blocks_per_group);							//8192
	printf("\n\rNumber of fragments per group:\t%i ",superblock->s_frags_per_group );						//8192
	printf("\n\rInodes per group:\t\t\t%i", superblock->s_inodes_per_group);								//184
	printf("\n\rLast recorded mount time:\t%i", superblock->s_mtime);										//0 (varies)
	printf("\n\rLast recorded write time:\t%i", superblock->s_wtime);										//1320245118 (varies)
	printf("\n\rTimes file system mounted since last check:\t%i", superblock->s_mnt_count);					//1 (varies)
	printf("\n\rMaximum times file system may be mounted before check:\t%i", superblock->s_max_mnt_count);	//32 (varies)
	printf("\n\rMagic number\t%X", superblock->s_magic);													//0xEF53
	// s_state = 1 (), s_errors = 1, s_minor_rev_level = 0, s_lastcheck = (varies), s_checkinterval= (varies)
	// s_creator_os = 0 (), s_rev_level = 1, s_def_resuid = 0, s_def_resgid = 0;
	printf("\n\rIndex to the first inode usable for standard files:\t%i", superblock->s_first_ino);			//11
	printf("\n\rSize of Inode structure:\t%i", superblock->s_inode_size);									//128
	// s_block_group_nr = 0;,s_feature_compact = 00111000 (56), s_feature_incompact = 00000010 (2), s_feature_ro_compact = 00000001 (1)
	// s_uuid[16] = (varies), s_volume_name = 0,  s_last_mounted[8] = 0, s_algo_bitmap= 0;
	printf("\n\r----Calculated Entries---\n\r");
	printf("\n\rNumber of groups:\t\t\t\t%i", number_of_groups);											//1
	printf("\n\rInodes Per Group:\t\t\t\t%i", inodes_per_block);											//8
	printf("\n\rSectors per block:\t\t\t\t%i", sectors_per_block);											//2
	printf("\n\rNumber of INode records in a indirect block %X:\t\t\t\t%i", inodes_per_indirect);			//0x100
	printf("\n\r");

}

void debug_dump_current_directory(){
	u32int x;

	printf("\n\r name\tinode\tname_length\ttype");
	for( x = 0; x < parsed_directory_size; x++){
		printf ("\n\r%s",parsed_directory[x].name );
		printf ("\t%X",parsed_directory[x].inode );
		printf ("\t%i",parsed_directory[x].name_length );
		printf ("\t%X",parsed_directory[x].file_type );
		printf ("\n\r");
	}
}

