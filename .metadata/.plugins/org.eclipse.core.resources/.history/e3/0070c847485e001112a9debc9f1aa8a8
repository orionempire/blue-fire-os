#include <common_include.h>


void shell( s32int argc, char **argv){
	// Shell command buffer
	s08int cmd[256];

	// Reset the command buffer
	memset08(cmd, 0, 256);

	// Command line
	while(TRUE) {
			kprintf(SH_PROMPT);

			scanf("%s", cmd);

			kprintf("/n%s/n",cmd);
	}
}
