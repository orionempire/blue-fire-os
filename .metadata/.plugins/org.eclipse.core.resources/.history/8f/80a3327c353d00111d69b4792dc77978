#include <common_include.h>

// Declared in assembly/test.s
//extern void infinity();

void k_main(u32int system_memory_amount) {

	u32int flags;
	disable_interrupts(flags);

	initialize_video();

	initialize_boot_console();

	memset16((u16int *)0x6000, 0x00, 1);

	while(1);
}
